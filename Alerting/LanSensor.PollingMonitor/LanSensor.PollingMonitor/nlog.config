<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="info"
      internalLogFile="c:\log\lansensor\lansensor-internal.log">

    <!-- enable asp.net core layout renderers -->
    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>

    <!-- the targets to write to -->
    <targets>
        <!-- write logs to file  -->
        <target xsi:type="File"
                name="ApiLogFile"
                fileName="lansensor-api.log"
                archiveFileName="lansensor-api-{#}.log"
                archiveNumbering="Date"
                archiveEvery="Day"
                archiveDateFormat="yyyyMMdd"
                maxArchiveFiles="10"
                concurrentWrites="false"
                keepFileOpen="true"
                openFileCacheTimeout = "30">
            <layout xsi:type="JsonLayout" includeAllProperties="true">
                <attribute name="time" layout="${longdate}" />
                <attribute name="level" layout="${level:upperCase=true}"/>
                <attribute name="logger" layout="${logger}"/>
                <attribute name="aspNetTraceIdentifier" layout="${aspnet-TraceIdentifier}" />
                <attribute name="message" layout="${message}" />
            </layout>
        </target>
        <target name="console" xsi:type="Console" />
    </targets>

    <!-- rules to map from logger name to target -->
    <rules>
        <logger name="*" minLevel="Info" writeTo="ApiLogFile" />
        <logger name="*" minlevel="Warning" writeTo="console" />
        <logger name="LanSensor.PollingMonitor.Program" minlevel="Info" writeTo="console" />
    </rules>
</nlog>